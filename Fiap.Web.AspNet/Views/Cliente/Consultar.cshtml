@model Fiap.Web.AspNet.Models.ClienteModel

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Cliente - Consultar</title>
</head>
<body>
    <h1>Cliente - Consultar</h1>

    <div class="form-horizontal">
        <hr />
        <div class="form-group">
            <label><b>Id</b></label>
            <div class="col-md-10">
                <span>@Model.ClienteId</span>
            </div>
        </div>

        <div class="form-group">
            <label class="col-md-2"><b>Nome</b></label>
            <div class="col-md-10">
                <span>@Model.Nome</span>
            </div>
        </div>

        <div class="form-group">
            <label><b>Representante</b></label>
            <div class="col-md-10">
                <span>@Model.Representante.NomeRepresentante</span>
            </div>
        </div>
        <hr />
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <a asp-controller="Cliente" asp-action="Index" class="btn btn-warning">Voltar</a>
            </div>
        </div>
        <hr />
    </div>

</body>
</html>
